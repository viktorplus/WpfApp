<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <StackPanel>
        <!--<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Счет" FontSize="24"/>-->
        <TextBlock Text="{Binding Game.Score}" FontSize="24"/>


        <Grid x:Name="gameGrid" Margin="5" Width="250" Height="400" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Плитки игрового поля -->
            <Border Grid.Row="0" Grid.Column="0">
                <TextBlock Text="{Binding Game.Tiles[0, 0].Value}"/>
            </Border>
            <Border Grid.Row="0" Grid.Column="1">
                <TextBlock Text="{Binding Game.Tiles[0, 1].Value}"/>
            </Border>
            <Border Grid.Row="0" Grid.Column="2" >
                <TextBlock Text="{Binding Game.Tiles[0, 2].Value}"/>            
            </Border>
            <Border Grid.Row="0" Grid.Column="3" >
                <TextBlock Text="{Binding Game.Tiles[0, 3].Value}"/>            
            </Border>
            <Border Grid.Row="1" Grid.Column="0">
                <TextBlock Text="{Binding Game.Tiles[1, 0].Value}"/>            
            </Border>
            <Border Grid.Row="1" Grid.Column="1" >
                <TextBlock Text="{Binding Game.Tiles[1, 1].Value}"/>
            </Border>
            <Border Grid.Row="1" Grid.Column="2" >
                <TextBlock Text="{Binding Game.Tiles[1, 2].Value}"/>
            </Border>
            <Border Grid.Row="1" Grid.Column="3" >
                <TextBlock Text="{Binding Game.Tiles[1, 3].Value}"/>
            </Border>
            <Border Grid.Row="2" Grid.Column="0" >
                <TextBlock Text="{Binding Game.Tiles[2, 0].Value}"/>
            </Border>
            <Border Grid.Row="2" Grid.Column="1" >
                <TextBlock Text="{Binding Game.Tiles[2, 1].Value}"/>
            </Border>
            <Border Grid.Row="2" Grid.Column="2" >
                <TextBlock Text="{Binding Game.Tiles[2, 2].Value}"/>
            </Border>
            <Border Grid.Row="2" Grid.Column="3" >
                <TextBlock Text="{Binding Game.Tiles[2, 3].Value}"/>
            </Border>
            <Border Grid.Row="3" Grid.Column="0" >
                <TextBlock Text="{Binding Game.Tiles[3, 0].Value}"/>
            </Border>
            <Border Grid.Row="3" Grid.Column="1" >
                <TextBlock Text="{Binding Game.Tiles[3, 1].Value}"/>
            </Border>
            <Border Grid.Row="3" Grid.Column="2" >
                <TextBlock Text="{Binding Game.Tiles[3, 2].Value}"/>
            </Border>
            <Border Grid.Row="3" Grid.Column="3" >
                <TextBlock Text="{Binding Game.Tiles[3, 3].Value}"/>
            </Border>
        </Grid>
    </StackPanel>
</Window>
