<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="400" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="60" />
        </Grid.ColumnDefinitions>

        <TextBox Name="historyTextBox" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Text="0" TextAlignment="Right" IsReadOnly="True" FontSize="18" />
        <TextBox Name="currentNumberTextBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Text="0" TextAlignment="Right" IsReadOnly="True" FontSize="24" />

        <Button Content="7" Grid.Row="3" Grid.Column="0" Click="Digit_Click" />
        <Button Content="8" Grid.Row="3" Grid.Column="1" Click="Digit_Click" />
        <Button Content="9" Grid.Row="3" Grid.Column="2" Click="Digit_Click" />
        <Button Content="/" Grid.Row="3" Grid.Column="3" Click="Operation_Click" />

        <Button Content="4" Grid.Row="4" Grid.Column="0" Click="Digit_Click" />
        <Button Content="5" Grid.Row="4" Grid.Column="1" Click="Digit_Click" />
        <Button Content="6" Grid.Row="4" Grid.Column="2" Click="Digit_Click" />
        <Button Content="*" Grid.Row="4" Grid.Column="3" Click="Operation_Click" />

        <Button Content="1" Grid.Row="5" Grid.Column="0" Click="Digit_Click" />
        <Button Content="2" Grid.Row="5" Grid.Column="1" Click="Digit_Click" />
        <Button Content="3" Grid.Row="5" Grid.Column="2" Click="Digit_Click" />
        <Button Content="-" Grid.Row="5" Grid.Column="3" Click="Operation_Click" />

        <Button Content="0" Grid.Row="6" Grid.Column="0" Click="Digit_Click" />
        <Button Content="," Grid.Row="6" Grid.Column="1" Click="DecimalPoint_Click" />

        <Button Content="=" Grid.Row="6" Grid.ColumnSpan="2" Grid.Column="2" Click="Equals_Click" />

        <Button Content="CE" Grid.Row="2" Grid.Column="0" Click="ClearAll_Click" />
        <Button Grid.Row="2" Grid.Column="2" Click="RemoveLastDigit_Click">
            <Button.Content>
                &lt;
            </Button.Content>
        </Button>
        <Button Content="C" Grid.Row="2" Grid.Column="1" Click="Clear_Click" />
        <Button Content="+" Grid.Row="2" Grid.Column="3" Click="Operation_Click" />

    </Grid>
</Window>
