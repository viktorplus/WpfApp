<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Поля для поиска и добавления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="SearchTextBox" Width="200">
                <TextBox.ToolTip>
                    <ToolTip>Поиск...</ToolTip>
                </TextBox.ToolTip>
            </TextBox>
            <Button Content="Искать" Click="SearchButton_Click" Margin="10,0" />
            <TextBox x:Name="NameTextBox" Width="100">
                <TextBox.ToolTip>
                    <ToolTip>Имя</ToolTip>
                </TextBox.ToolTip>
            </TextBox>
            <TextBox x:Name="SurnameTextBox" Width="100">
                <TextBox.ToolTip>
                    <ToolTip>Фамилия</ToolTip>
                </TextBox.ToolTip>
            </TextBox>
            <TextBox x:Name="AddressTextBox" Width="200">
                <TextBox.ToolTip>
                    <ToolTip>Адрес</ToolTip>
                </TextBox.ToolTip>
            </TextBox>
            <TextBox x:Name="PhoneTextBox" Width="150">
                <TextBox.ToolTip>
                    <ToolTip>Телефон</ToolTip>
                </TextBox.ToolTip>
            </TextBox>
            <Button Content="Добавить" Click="AddUserButton_Click" Margin="10,0" />
        </StackPanel>
        <Button Content="Позвонить" Click="CallButton_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" />

        <ListView x:Name="LVMain" Grid.Row="1" MouseDoubleClick="LVMain_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Фото" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Ellipse Width="100" Height="100">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{Binding Photo}" />
                                    </Ellipse.Fill>
                                </Ellipse>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Имя" Width="100" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Фамилия" Width="100" DisplayMemberBinding="{Binding Surname}" />
                    <GridViewColumn Header="Адрес" Width="200" DisplayMemberBinding="{Binding Address}" />
                    <GridViewColumn Header="Телефон" Width="150" DisplayMemberBinding="{Binding Phone}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>

