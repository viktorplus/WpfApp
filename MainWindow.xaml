<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
              Title="Color Buttons App" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="10">
            <Button Content="Navy" Background="Navy" Foreground="White" Margin="2"/>
            <Button Content="Blue" Background="Blue" Foreground="White" Margin="2"/>
            <Button Content="Aqua" Background="Aqua" Foreground="Black" Margin="2"/>
            <Button Content="Teal" Background="Teal" Foreground="Black" Margin="2"/>
            <Button Content="Olive" Background="Olive" Foreground="White" Margin="2"/>
            <Button Content="Green" Background="Green" Foreground="White" Margin="2"/>
            <Button Content="Lime" Background="Lime" Foreground="Black" Margin="2"/>
            <Button Content="Yellow" Background="Yellow" Foreground="Black" Margin="2"/>
            <Button Content="Orange" Background="Orange" Foreground="Black" Margin="2"/>
            <Button Content="Red" Background="Red" Foreground="White" Margin="2"/>
            <Button Content="Maroon" Background="Maroon" Foreground="White" Margin="2"/>
            <Button Content="Fuchsia" Background="Fuchsia" Foreground="Black" Margin="2"/>
            <Button Content="Purple" Background="Purple" Foreground="White" Margin="2"/>
            <Button Content="Black" Background="Black" Foreground="White" Margin="2"/>
            <Button Content="Silver" Background="Silver" Foreground="Black" Margin="2"/>
            <Button Content="Gray" Background="Gray" Foreground="White" Margin="2"/>
            <Button Content="White" Background="White" Foreground="Black" Margin="2"/>
        </StackPanel>
    </Grid>
</Window>