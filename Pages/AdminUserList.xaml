<UserControl x:Class="WpfApp.Pages.AdminUserList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <!-- Ваш интерфейс для отображения пользователей -->
        <ListView x:Name="UsersListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding FirstName}" />
                    <!-- Добавьте другие поля, которые вы хотите отобразить -->
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Предыдущие 10" Click="PreviousPageButton_Click"/>
            <Button Content="Следующие 10" Click="NextPageButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
